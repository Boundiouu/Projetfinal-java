<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="projetjava.controller.TaskController">

    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <Label text="Mes tâches" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <ListView fx:id="taskListView" prefHeight="250.0"/>
        </VBox>
    </center>

    <bottom>
        <VBox spacing="8">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <HBox spacing="10">
                <Label text="Titre :" minWidth="80"/>
                <TextField fx:id="titleField" promptText="Titre de la tâche" HBox.hgrow="ALWAYS"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Description :" minWidth="80"/>
                <TextField fx:id="descriptionField" promptText="Description rapide" HBox.hgrow="ALWAYS"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Date limite :" minWidth="80"/>
                <DatePicker fx:id="dueDatePicker"/>

                <Label text="Priorité :" minWidth="60"/>
                <ChoiceBox fx:id="priorityChoiceBox"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="Ajouter" onAction="#onAddTask"/>
                <Button text="Modifier" onAction="#onEditTask"/>
                <Button text="Supprimer" onAction="#onDeleteTask"/>
            </HBox>

        </VBox>
    </bottom>

</BorderPane>
