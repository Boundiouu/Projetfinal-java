<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="projetjava.controller.TaskController">

    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <Label text="Mes tâches" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <ListView fx:id="taskListView" prefHeight="250.0"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <TextField fx:id="titleField"
                       promptText="Titre de la tâche"
                       HBox.hgrow="ALWAYS"/>
            <Button text="Ajouter" onAction="#onAddTask"/>
            <Button text="Supprimer" onAction="#onDeleteTask"/>
        </HBox>
    </bottom>

</BorderPane>
